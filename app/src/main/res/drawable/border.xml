<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Definir los bordes -->
    <stroke
        android:width="1dp"
        android:color="#616161" /> <!-- Color del borde -->

    <!-- Definir el color de fondo (opcional) -->
    <solid android:color="#FFFFFF" /> <!-- Fondo blanco -->

    <!-- Definir el margen interno entre el borde y el contenido -->
    <padding
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp" />
</shape>
